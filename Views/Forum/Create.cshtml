@using GreenMeadowsPortal.ViewModels
@model CreateTopicViewModel
@{
    ViewData["Title"] = "Create New Topic";
    Layout = "~/Views/Shared/_PortalLayout.cshtml";
}

<div class="page-header">
    <h1>Create New Discussion Topic</h1>
    <nav class="breadcrumb">
        <a asp-controller="Dashboard" asp-action="@(Model.Role == "Admin" ? "AdminDashboard" : (Model.Role == "Staff" ? "StaffDashboard" : "HomeownerDashboard"))">Dashboard</a> /
        <a asp-controller="Forum" asp-action="Index">Community Forum</a> /
        Create New Topic
    </nav>
</div>

<div class="content-section">
    <form asp-action="Create" method="post">
        <div asp-validation-summary="ModelOnly" class="validation-summary"></div>

        <div class="form-group">
            <label asp-for="Title">Topic Title</label>
            <input asp-for="Title" class="form-control" placeholder="Enter a descriptive title for your topic" />
            <span asp-validation-for="Title" class="text-danger"></span>
            <small class="form-text text-muted">Be specific and clear about what you want to discuss.</small>
        </div>

        <div class="form-group">
            <label asp-for="Content">Content</label>
            <textarea asp-for="Content" class="form-control" rows="10" placeholder="Share your thoughts, questions, or ideas with the community..."></textarea>
            <span asp-validation-for="Content" class="text-danger"></span>
            <small class="form-text text-muted">Provide details to help others understand your topic better.</small>
        </div>

        <div class="form-actions">
            <a asp-action="Index" class="btn">Cancel</a>
            <button type="submit" class="btn primary-btn">Create Topic</button>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}